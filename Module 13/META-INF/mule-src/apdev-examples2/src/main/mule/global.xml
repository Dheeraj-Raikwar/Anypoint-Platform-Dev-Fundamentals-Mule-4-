http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/salesforce http://www.mulesoft.org/schema/mule/salesforce/current/mule-salesforce.xsd">
		
	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="7e9ce158-d7f0-4576-aeb6-f7d19e8f532b" >
		<http:listener-connection host="0.0.0.0" port="${http.port}" />
	</http:listener-config>
	<http:request-config name="HTTP_Request_configuration" doc:name="HTTP Request configuration" doc:id="b5635f57-d4b4-4d19-bb5e-3e77ad4781da" >
		<http:request-connection host="localhost" port="8081" />
	</http:request-config>
	<vm:config name="VM_Config" doc:name="VM Config" doc:id="04ff45ae-9ec7-4099-88c6-90bb9e138ead" >
		<vm:queues >
			<vm:queue queueName="goodbye" />
		</vm:queues>
	</vm:config>
	<salesforce:sfdc-config name="Salesforce_Config" doc:name="Salesforce Config" doc:id="db3da5e1-1ea4-492f-a2b3-19a0d84390c8" >
		<salesforce:basic-connection username="${sfdc.username}" password="${sfdc.password}" securityToken="${sfdc.token}" />
	</salesforce:sfdc-config>
	<configuration-properties doc:name="Configuration properties" doc:id="b6b26e09-0c35-4a6e-af4c-95f4dbbad849" file="config.yaml" />
	<file:config name="File_Config" doc:name="File Config" doc:id="c17a7c6a-af6b-4b34-948c-02fa84fb096f" >
		<file:connection workingDir="${file.accountsDir}" />
	</file:config>
	<db:config name="Database_Config" doc:name="Database Config" doc:id="35401ca4-be66-4f80-aca7-f50e907c1521" >
		<db:my-sql-connection host="${db.host}" port="${db.port}" user="${db.user}" password="${db.password}" database="${db.database}" />
	</db:config>
	<jms:config name="JMS_Config" doc:name="JMS Config" doc:id="31c36ce8-c797-49ac-86be-4d69b6541d25" >
		<jms:active-mq-connection >
			<jms:factory-configuration />
		</jms:active-mq-connection>
	</jms:config>	
	
	</mule>
